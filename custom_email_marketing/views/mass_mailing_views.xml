<odoo>
    <record id="view_mass_mailing_form_custom" model="ir.ui.view">
        <field name="name">mass.mailing.form.custom</field>
        <field name="model">mail.mass_mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mass_mailing_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='contact_list_ids']" position="after">
                <field name="filter_mode" widget="radio">
                    <attribute name="options">
                        {'selection': [('contacts', 'Contacts'), ('companies', 'Companies')]}
                    </attribute>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
