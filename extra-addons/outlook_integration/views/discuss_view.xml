<odoo>
    <record id="action_outlook_sync" model="ir.actions.server">
        <field name="name">Sync Outlook Inbox</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="state">code</field>
        <field name="code">
            action = env['outlook.mail.sync'].action_redirect_outlook_auth()
        </field>
    </record>

    <record id="action_outlook_message_ui" model="ir.actions.server">
        <field name="name">Outlook Messages UI</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="state">code</field>
        <field name="code">
            action = env['outlook_integration.outlook.sync'].redirect_to_outlook_messages()
        </field>
    </record>
    <menuitem 
        id="menu_outlook_sync"
        name="Outlook Sync"
        parent="mail.menu_root_discuss"
        sequence="10"
    />
    <menuitem
        id="menu_outlook_sync_action"
        name="Sync Outlook"
        parent="menu_outlook_sync"
        action="outlook_integration.action_outlook_sync"
        sequence="10"
    />
    <menuitem
        id="menu_outlook_messages"
        name="Outlook Messages"
        parent="menu_outlook_sync"
        action="outlook_integration.action_outlook_message_ui"
        sequence="20"
    />
</odoo>