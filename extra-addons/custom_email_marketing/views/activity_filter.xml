<odoo>
    <record id="view_task_form_inherit" model="ir.ui.view">
        <field name="name">project.task.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <!-- 🚀 Dropdown chọn loại tin nhắn -->
            <xpath expr="//chatter" position="before">
                <div class="o_horizontal">
                    <field name="message_filter" widget="selection"/>
                </div>
            </xpath>
            <!-- 🚀 Lọc tin nhắn trực tiếp mà không thay đổi giao diện -->
            <xpath expr="//chatter" position="inside">
                <attribute name="class">o_Chatter filterable_chatter</attribute>
            </xpath>
        </field>
    </record>
</odoo>
