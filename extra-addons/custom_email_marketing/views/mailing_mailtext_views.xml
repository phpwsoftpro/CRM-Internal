<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->


    <record id="view_mailing_mailtext_tree" model="ir.ui.view">
            <field name="name">mailing.mailtext.list</field>
            <field name="model">mailing.mailtext</field>
            <field name="arch" type="xml">
                <list string="Mail Templates">
                    <field name="char_mailtest"/>
                </list>
            </field>
        </record>

    <!-- Form View -->
    <record id="view_mailing_mailtext_form" model="ir.ui.view">
        <field name="name">mailing.mailtext.form</field>
        <field name="model">mailing.mailtext</field>
        <field name="arch" type="xml">
            <form string="Mail Template">
                <sheet>
                    <group>
                        <field name="char_mailtest"/>
<!--                        <field name="text_mailtest"/>-->
                        <field name="text_mailtest" widget="html" options="{'toolbar': true}"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mailing_mailtext" model="ir.actions.act_window">
        <field name="name">Mail Templates</field>
        <field name="res_model">mailing.mailtext</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_mailing_mailtext"
          name="Mail Templates"
          parent="mass_mailing.mass_mailing_mailing_list_menu"
          sequence="3"
          action="action_mailing_mailtext"/>

</odoo>
