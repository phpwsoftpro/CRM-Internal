    <!-- Action for Companies -->
    <record id="action_mass_mailing_companies" model="ir.actions.act_window">
        <field name="name">Companies</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_company', '=', True)]</field>
    </record>

    <!-- Action for Contacts -->
    <record id="action_mass_mailing_contacts" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_res_partner_tree"/> <!-- Linked view -->
        <field name="domain">[('is_company', '=', False)]</field>
    </record>

    <!-- Parent Menu -->
    <menuitem id="menu_mass_mailing_companies_contacts"
            name="Companies &amp; Contacts"
            parent="mass_mailing.mass_mailing_menu_root"
            sequence="20"/>

    <!-- Submenu 1 -->
    <menuitem id="menu_mass_mailing_companies"
            name="Companies"
            parent="menu_mass_mailing_companies_contacts"
            action="action_mass_mailing_companies"
            sequence="10"/>

    <!-- Submenu 2 -->
    <menuitem id="menu_mass_mailing_contacts"
            name="Contacts"
            parent="menu_mass_mailing_companies_contacts"
            action="action_mass_mailing_contacts"
            sequence="20"/>
