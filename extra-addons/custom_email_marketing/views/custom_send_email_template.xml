<odoo>
    <data>
        <!-- Wizard gửi email -->
        <record id="action_send_email_wizard" model="ir.actions.act_window">
            <field name="name">Send Email</field>
            <field name="res_model">custom.email.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Tùy chỉnh form view res.partner -->
        <record id="view_partner_form_custom" model="ir.ui.view">
            <field name="name">res.partner.form.custom</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Thay đổi widget của trường email -->
                <field name="email" position="attributes">
                    <attribute name="widget">email_action</attribute>
                    <attribute name="options">{'action': 'action_open_send_email_wizard'}</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
